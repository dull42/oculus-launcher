<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OculusLauncher.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
        x:Class="OculusLauncher.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/oculus_logo_icon_248328.ico"
        Title="Oculus Launcher"
        Width="500" Height="500"
        MinWidth="400" MinHeight="400"
        CanResize="True">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel Margin="16">

        <!-- Title -->
        <TextBlock DockPanel.Dock="Top"
                   Text="Oculus Launcher"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,4"/>

        <TextBlock DockPanel.Dock="Top"
                   Text="Oculus Firewall Fix"
                   FontSize="13"
                   Foreground="#888888"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"/>

        <!-- Status Panel -->
        <Border DockPanel.Dock="Top"
                Background="#2D2D30"
                CornerRadius="6"
                Padding="12,8"
                Margin="0,0,0,8">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Status: "
                               FontWeight="SemiBold"
                               Foreground="#CCCCCC"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="#4FC3F7"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            IsVisible="{Binding IsRunning}"
                            Margin="0,4,0,0">
                    <TextBlock Text="Blocked IPs: "
                               FontWeight="SemiBold"
                               Foreground="#CCCCCC"/>
                    <TextBlock Text="{Binding BlockedIpsText}"
                               Foreground="#EF5350"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Oculus Path Settings -->
        <Border DockPanel.Dock="Top"
                Background="#2D2D30"
                CornerRadius="6"
                Padding="12,8"
                Margin="0,0,0,12">
            <StackPanel Spacing="6">
                <TextBlock Text="Oculus Client Path"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#AAAAAA"/>
                <Grid ColumnDefinitions="*,8,Auto,8,Auto">
                    <TextBox Grid.Column="0"
                             Text="{Binding CustomOculusPath}"
                             Watermark="Auto-detect"
                             FontSize="12"
                             Height="30"
                             VerticalContentAlignment="Center"/>
                    <Button Grid.Column="2"
                            Content="Browse"
                            Command="{Binding BrowseOculusPathCommand}"
                            Height="30"
                            FontSize="12"
                            Padding="12,0"
                            VerticalContentAlignment="Center"/>
                    <Button Grid.Column="4"
                            Content="Clear"
                            Command="{Binding ClearOculusPathCommand}"
                            Height="30"
                            FontSize="12"
                            Padding="12,0"
                            VerticalContentAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Grid DockPanel.Dock="Bottom"
              ColumnDefinitions="*,12,*"
              Margin="0,12,0,0">
            <Button Grid.Column="0"
                    Content="Launch"
                    Command="{Binding LaunchCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Height="40"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Background="#388E3C"
                    Foreground="White"/>
            <Button Grid.Column="2"
                    Content="Stop"
                    Command="{Binding StopCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Height="40"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Background="#D32F2F"
                    Foreground="White"/>
        </Grid>

        <!-- Log Area -->
        <Border Background="#1E1E1E"
                CornerRadius="6"
                Padding="8"
                ClipToBounds="True">
            <ScrollViewer Name="LogScrollViewer"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding LogMessages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       FontFamily="Consolas, Courier New, monospace"
                                       FontSize="12"
                                       Foreground="#B0BEC5"
                                       TextWrapping="Wrap"
                                       Margin="0,1"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

    </DockPanel>
</Window>
